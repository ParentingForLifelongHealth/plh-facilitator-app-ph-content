{
  "flow_type": "template",
  "flow_name": "co_facilitator",
  "status": "released",
  "rows": [
    {
      "type": "begin_data_items",
      "value": "parent_groups"
    },
    {
      "type": "begin_display_group",
      "parameter_list": "style: column;",
      "condition": "@item.id == @fields.current_group_id"
    },
    {
      "type": "begin_display_group"
    },
    {
      "type": "text",
      "value": "Add Co-Facilitator",
      "style_list": "color: #74777C"
    },
    {
      "type": "round_button",
      "action_list": "click | pop_up: add_cofacilitator;",
      "parameter_list": "variant: no-background; \nicon_src: images/icons/add_circle.svg;",
      "condition": "@item.cofacilitator_id == \"\" || !@item.cofacilitator_id"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "begin_display_group",
      "condition": "!(@item.cofacilitator_id == \"\" || !@item.cofacilitator_id)"
    },
    {
      "type": "text",
      "value": "@item.co_facilitator_name",
      "style_list": "flex: 1;",
      "condition": "@item.cofacilitator_id"
    },
    {
      "type": "round_button",
      "name": "button_delete_shared",
      "action_list": "click | set_field: cofacilitator_id: @item.cofacilitator_id;\nclick | pop_up: remove_cofacilitator;",
      "parameter_list": "icon_src: images/icons/delete.svg;\nstyle: orange",
      "condition": true
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "end_data_items"
    }
  ]
}