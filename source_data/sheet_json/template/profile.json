{
  "flow_type": "template",
  "flow_name": "profile",
  "status": "released",
  "parameter_list": {
    "app_config": {
      "LAYOUT": {
        "page_padding": "24px 0"
      }
    }
  },
  "rows": [
    {
      "type": "update_action_list",
      "name": "update_login_button",
      "action_list": "nav_resume | emit: force_reload"
    },
    {
      "name": "next_icon_asset",
      "value": "chevron-forward",
      "exclude_from_translation": true
    },
    {
      "name": "profile_icon",
      "value": "images/icons/profile_card.svg",
      "exclude_from_translation": true
    },
    {
      "name": "language_icon",
      "value": "images/icons/world.svg",
      "exclude_from_translation": true
    },
    {
      "name": "user_id_icon",
      "value": "images/icons/key.svg",
      "exclude_from_translation": true
    },
    {
      "name": "login_icon",
      "value": "images/icons/key.svg",
      "exclude_from_translation": true
    },
    {
      "name": "content_icon",
      "value": "images/icons/content.svg",
      "exclude_from_translation": true
    },
    {
      "name": "parent_icon",
      "value": "images/icons/people_network.svg",
      "exclude_from_translation": true
    },
    {
      "type": "title",
      "name": "settings",
      "value": "Settings",
      "parameter_list": "variant: page_banner",
      "style_list": "padding-inline: 24px;"
    },
    {
      "type": "title",
      "name": "account",
      "value": "Profile",
      "parameter_list": "variant: section_banner"
    },
    {
      "type": "begin_display_group",
      "name": "dg_account",
      "parameter_list": "variant: inline_padding; style: column"
    },
    {
      "type": "button",
      "name": "button_login",
      "value": "Account",
      "parameter_list": "variant: card;\nicon: @local.login_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: profile_account;"
    },
    {
      "type": "button",
      "name": "button_profile",
      "value": "Profile",
      "parameter_list": "variant: card;\nicon: @local.profile_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: profile_about"
    },
    {
      "type": "button",
      "name": "button_language",
      "value": "Switch language",
      "parameter_list": "variant: card;\nicon: @local.language_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: language_select",
      "condition": false
    },
    {
      "type": "button",
      "name": "button_user_id",
      "value": "Your @global.app_name Code",
      "parameter_list": "variant: card;\nicon: @local.user_id_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: profile_id"
    },
    {
      "type": "button",
      "name": "button_content",
      "value": "Your Content Package",
      "parameter_list": "variant: card;\nicon: @local.content_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: package_select",
      "condition": false
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "title",
      "name": "parent",
      "value": "Parent Actions",
      "parameter_list": "variant: section_banner",
      "condition": "@fields.user_type == \"facilitator\" || @fields.user_type == \"tester\""
    },
    {
      "type": "begin_display_group",
      "name": "dg_parent",
      "parameter_list": "variant: inline_padding; style: column",
      "condition": "@fields.user_type == \"facilitator\" || @fields.user_type == \"tester\""
    },
    {
      "type": "button",
      "name": "button_parents",
      "value": "Your Parent Groups",
      "parameter_list": "variant: card;\nicon: @local.parent_icon;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | go_to: profile_groups;\nclick | plh_parent_group: pull | parent_groups_data_list: parent_groups, parents_data_list: parents, completion_tracking_data_list: sub_items;",
      "comments": "click | go_to : @local.final_page;"
    },
    {
      "type": "end_display_group"
    },
    {
      "type": "title",
      "name": "terms",
      "value": "App Details & Terms",
      "parameter_list": "variant: section_banner"
    },
    {
      "type": "begin_display_group",
      "name": "dg_account",
      "parameter_list": "variant: inline_padding; style: column"
    },
    {
      "type": "button",
      "name": "button_about",
      "value": "@global.about_this_app",
      "parameter_list": "variant: card;\nicon: images/icons/magnify_glass.svg;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | pop_up: app_about | fullscreen: true"
    },
    {
      "type": "button",
      "name": "button_terms",
      "value": "@global.terms_and_conditions",
      "parameter_list": "variant: card;\nicon: images/icons/feather.svg;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | pop_up: app_menu_terms | fullscreen: true"
    },
    {
      "type": "button",
      "name": "button_privacy",
      "value": "@global.privacy_policy",
      "parameter_list": "variant: card;\nicon: images/icons/content.svg;\nicon_secondary_asset: @local.next_icon_asset;\nstyle: no-background;\ntext_align: left;",
      "action_list": "click | pop_up: app_menu_privacy_policy | fullscreen: true"
    },
    {
      "type": "end_display_group"
    }
  ]
}